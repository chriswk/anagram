    <head>
        <title>Anagram</title>
    </head>
    <body>
        <header>
        </header>
        <section title="Anagram">
            <form method="post" action="/anagram">
                <label for="word">Your desired characters to find an anagram for</label>
                <input type="text" name="word" />
                <input type="submit" />
            </form>
        </section>
        <section title="Pangram">
            <form method="post" name="pangram" action="/pangram">
                <input type="hidden" value="us" name="language" />>
                <input type="text" placeholder="letters" name="letters" />
                <input type="text" min="1" max="1" placeholder="Must contain this letter" name="mustcontain" />
                <input type="submit" title="Find pangrams" />
            </form>
        </section>
        <footer>
        </footer>
    </body>
</html>